    <delete id="deleteMembers">
        DELETE FROM EMPLOYEE
        WHERE NO IN
        <foreach item="no" collection="noList" open="(" separator="," close=")">
            #{no}
        </foreach>
    </delete>

    <update id="delete">
        UPDATE EMPLOYEE
        SET DEL_YN = 'Y'
        WHERE NO IN
        <foreach item="item" collection="accountArr" open="(" separator="," close=")">
            #{item}
        </foreach>
    </update>
